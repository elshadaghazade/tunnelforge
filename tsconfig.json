{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./public",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedParameters": true,
        "noUncheckedSideEffectImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}